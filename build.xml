<?xml version="1.0"?>
<project name="qualm" default="all">

  <path id="classpath">
    <pathelement location="/usr/share/java/gnu-getopt.jar"/>
    <pathelement location=".."/>
  </path>

  <target name="all" depends="compile"
	  description="Build the system"/>

  <target name="compile">
    <javac debug="true" source="1.4" srcdir=".">
      <classpath refid="classpath"/>
    </javac>
  </target>

  <target name="dist" depends="compile">
    <jar destfile="qualm.jar"
	 includes="qualm/**/*.class"
	 manifest="qualm.manifest"
	 basedir=".."/>
<!--	 excludes="**/testing/" -->
  </target>

</project>
